<% include common/start %>

<% include common/header %>

<div id="work" class="<%= data.class %> wrapper">
    
    <section id="intro">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 text-center">
                    <img src="/assets/images/works/<%= data.logo %>" alt="Logo de <%= data.title %>" height="200" />
                </div>
                <div class="col-sm-6">
                    <h2><%= data.title %></h2>
                    <h4><%= data.subtitle %></h4>
                </div>
            </div>
        </div>
    </section>

    <section id="info">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <p><%= data.description %></p>
                </div>
                <div class="col-sm-6 text-center">
                    <img src="/assets/images/works/<%= data.screenshot %>" alt="Logo de <%= data.title %>" height="400" />
                </div>
            </div>
        </div>
    </section>

    <section id="keys">
        <div class="container">
            <div class="row">
                <% for(var i=0; i<data.keys.length; i++) { %>
                    <div class="col-sm-4">
                        <div class="key"><%= data.keys[i].key %></div>
                    </div>
                <% } %>
            </div>
        </div>
    </section>

    <section id="metrics">
        <div class="container">
            <div class="row text-center">
                <% for(var i=0; i<data.metrics.length; i++) { %>
                    <div class="col-sm-4">
                        <h4 class="metric">
                            <span class="value"><%= data.metrics[i].value %></span>
                            <br/>
                            <span class="text"><%= data.metrics[i].metric %></span>
                        </h4>
                    </div>
                <% } %>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 col-xs-12 text-center metricsinfo">
                    <small><%= data.metricsinfo %><small>
                </div>
            </div>
        </div>
    </section>

    <section id="technologies">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 text-center">
                    <h6 class="title">TECH</h6>
                </div>
                <div class="col-sm-6">
                    <div class="row">
                        <% for(var i=0; i<data.technologies.length; i++) { %>
                            <div class="col-sm-3 text-center">
                                <a href="<%= data.technologies[i].url %>" target="_blank" title="<%= data.technologies[i].technology %>">
                                    <img src="<%= data.technologies[i].logo %>" alt="Logo de <%= data.technologies[i].technology %>" />
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <% if (data.own == "no") { %>
        <section id="client">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 text-center">
                    <a href="<%= data.clienturl %>" target="_blank"><%= data.clientname %></a>
                    <br/>
                    <%= data.clientdescription %>
                    <br/>
                    <%= data.clientyear %>
                    <br/>
                </div>
            </div>
        </div>
    </section>
    <% } %>

    <section id="call">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 text-center">
                    <h4><%= data.calltoaction.call %></h4>
                </div>
            </div>
        </div>
    </section>

</div>

<% include common/footer %>

<% include common/end %>