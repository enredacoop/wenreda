<% include common/start %>

<% include common/header %>

<div id="cooperative" class="wrapper">

    <section id="intro">
        <div style="padding:0 15px;">
            <div class="row">
                <div class="col-sm-3 text-center title">
                    <img src="/assets/images/cooperative/300x300fondogriscompleto.png" alt="Logo de Enreda" width="240px" />
                </div>
                <div class="col-sm-9 description">
                    <div class="row">
                        <div class="col-md-6 col-md-offset-5 col-sm-12 text-center">
                            <%= data.intro %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="principles">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 text-center">
                    <h2 class="section-heading"><%= data.principles.title %></h2>
                    <h3 class="section-subheading text-muted"><%= data.principles.subtitle %></h3>
                </div>
            </div>
            <div class="row text-center">
                <% for(var i=0; i<data.principles.items.length; i++) { %>
                    <div class="col-sm-4">
                        <span class="fa-stack fa-4x">
                            <i class="fa fa-circle fa-stack-2x text-primary"></i>
                            <i class="fa <%= data.principles.items[i].icon %> fa-stack-1x fa-inverse"></i>
                        </span>
                        <h3 class="principle-heading"><%= data.principles.items[i].title %></h3>
                        <p class="text-muted"><%= data.principles.items[i].description %></p>
                    </div>
                <% } %>
            </div>
        </div>
    </section>

    <section id="team">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 text-center">
                    <h2 class="section-heading"><%= data.team.title %></h2>
                    <h3 class="section-subheading text-muted"><%= data.team.subtitle %></h3>
                </div>
            </div>
            <div class="row">
                <% for(var i=0; i<data.team.core.length; i++) { %>
                    <div class="col-sm-4">
                        <div class="team-member">
                            <img src="http://lorempixel.com/200/200/people" class="img-responsive img-circle" alt="">
                            <h4><%= data.team.core[i].name %></h4>
                            <p class="text-muted">Whatever</p>
                            <ul class="list-inline social-buttons">
                                <li><a href="<%= data.team.core[i].email %>"><i class="fa fa-envelope"></i></a></li>
                                <li><a href="<%= data.team.core[i].twitter %>"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="<%= data.team.core[i].linkedin %>"><i class="fa fa-linkedin"></i></a></li>
                            </ul>
                        </div>
                    </div>
                <% } %>
            </div>
            <div class="row">
                <div class="col-sm-12 text-center">
                    <h2 class="section-heading">Colaboradores</h2>
                    <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
                </div>
            </div>
            <div class="row">
                <% for(var i=0; i<data.team.collaborators.length; i++) { %>
                    <div class="col-sm-4">
                        <div class="team-member">
                            <img src="http://lorempixel.com/200/200/people" class="img-responsive img-circle" alt="">
                            <h4><%= data.team.collaborators[i].name %></h4>
                            <p class="text-muted">Whatever</p>
                            <ul class="list-inline social-buttons">
                                <li><a href="<%= data.team.collaborators[i].email %>"><i class="fa fa-envelope"></i></a></li>
                                <li><a href="<%= data.team.collaborators[i].twitter %>"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="<%= data.team.collaborators[i].linkedin %>"><i class="fa fa-linkedin"></i></a></li>
                            </ul>
                        </div>
                    </div>
                <% } %>
            </div>
            <div class="row">
                <div class="col-sm-8 col-lg-offset-2 text-center">
                    <p class="large text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aut eaque, laboriosam veritatis, quos non quis ad perspiciatis, totam corporis ea, alias ut unde.</p>
                </div>
            </div>
        </div>
    </section>

    <section id="partof">
        <div class="container">
            <div class="row">
                <div id="join" class="col-sm-3 col-sm-offset-2 text-center">
                    <h5><%= data.join.title %></h5>
                    <p><%= data.join.description %></p>
                </div>
                <div id="collaborate" class="col-sm-3 col-sm-offset-2 text-center">
                    <h5><%= data.collaborate.title %></h5>
                    <p><%= data.collaborate.description %></p>
                </div>
            </div>
        </div>
    </section>

    <section id="network">
        <img src="/assets/images/cooperative/banner_network.png" />
        <div class="container">
            <div class="row">
                <div class="col-sm-12 text-center">
                    <h2 class="section-heading"><%= data.network.title %></h2>
                    <h3 class="section-subheading text-muted"><%= data.network.subtitle %></h3>
                </div>
            </div>
            <div class="row">
                <% for(var i=0; i<data.network.nodes.length; i++) { %>
                    <div class="col-md-3">
                        <div class="node">
                            <h3><%= data.network.nodes[i].name %></h3>
                            <p><%= data.network.nodes[i].description %></p>
                        </div>  
                    </div>
                <% } %>
            </div>
        </div>
    </section>

</div>

<% include common/footer %>

<% include common/end %>
