<% include common/start %>

<% include common/header %>

<div id="line" class="wrapper">

    <!-- intro-header -->
    <div class="intro-header <%= data.class %>">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2">
                    <div class="intro-message">
                        <h1><%= data.line %></h1>
                        <!--<hr class="intro-divider">
                        <h3><%= data.claim %></h3>-->
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.intro-header -->

    <!-- intro-header -->
    <div class="main-message">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 text-center">
                    <h3><%= data.claim %></h3>
                    <hr>
                    <%= data.why %>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.intro-header -->

    <!-- Page Content -->

    <% for(var i=0; i<data.dialogue.length; i++) { %>

        <% if (i % 2 == 0) { %>

            <div class="content-section-a">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-6">
                            <hr class="section-heading-spacer">
                            <div class="clearfix"></div>
                            <h2 class="section-heading"><%= data.dialogue[i].ask %></h2>
                        </div>
                        <div class=" col-md-5 col-md-offset-1 col-sm-6">
                            <p class="lead"><%= data.dialogue[i].answer %></p>
                        </div>
                    </div>
                </div>
            </div>
            
        <% } else { %>

            <div class="content-section-b">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-push-6  col-sm-6">
                            <hr class="section-heading-spacer">
                            <div class="clearfix"></div>
                            <h2 class="section-heading"><%= data.dialogue[i].ask %></h2>
                        </div>
                        <div class="col-md-5 col-sm-pull-6 col-sm-6">
                            <p class="lead"><%= data.dialogue[i].answer %></p>
                        </div>
                    </div>
                </div>
                <!-- /.container -->
            </div>
            <!-- /.content-section-b -->
            
        <% } %>

    <% } %>

    <% if (data.services.length > 0) { %>
        <div id="services" class="services-line">
            <div class="section-heading">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-4">
                            <h2>Servicios que ofrecemos</h2>
                        </div>
                        <div class="col-lg-8">
                            <ul>
                            <% for(var i=0; i<data.services.length; i++) { %>
                                <li>
                                <span class="title"><%= data.services[i].title %></span>
                                <br/>
                                <small><%= data.services[i].description %></small>
                                </li>
                            <% } %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

    <% if (data.works.length > 0) { %>

        <div id="works" class="works-line">
            <div class="section-heading">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-12 text-center">
                            <h4>Algunos de nuestros trabajos</h4>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <% for(var i=0; i<data.works.length; i++) { %>
                            <div class="col-sm-4">
                                <a href="<%= data.works[i].url %>" alt="<%= data.works[i].description %>" title="<%= data.works[i].description %>">
                                    <div class="work <%= data.works[i].class %>">
                                        <% if (data.works[i].image != '') { %>
                                            <img src="/assets/images/works/<%= data.works[i].image %>" alt="<%= data.works[i].description %>" />                                        
                                        <% } else { %>
                                            <h4><%= data.works[i].name %></h4>    
                                        <% } %>
                                    </div>
                                    </a>
                            </div>
                    <% } %>
                </div>
            </div>
        </div>
    <% } %>

    <div class="call <%= data.class %>">

        <div class="container">

            <div class="row">
                <div class="col-lg-6">
                    <h2><%= data.calltoaction.call %></h2>
                </div>
                <div class="col-lg-6">
                    <ul class="list-inline call-social-buttons">
                        <li>
                            <a href="tel:<%= global.phone %>" class="btn btn-custom btn-lg"><i class="fa fa-phone fa-fw"></i> <span class="network-name">Llámanos</span></a>
                        </li>
                        <li>
                            <a href="mailto:<%= global.email %>" class="btn btn-custom btn-lg"><i class="fa fa-envelope fa-fw"></i> <span class="network-name">Escríbenos</span></a>
                        </li>
                    </ul>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.banner -->

</div>

<% include common/footer %>

<% include common/end %>
